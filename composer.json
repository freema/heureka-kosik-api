{
	"name": "freema/heureka-kosik-api",
	"description": "Modern PHP client for Heureka Košík API",
	"keywords": ["api", "heureka.cz", "kosik", "e-commerce"],
	"homepage": "https://github.com/freema/heureka-kosik-api",
	"license": ["BSD-3-Clause", "GPL-2.0-or-later", "GPL-3.0-or-later"],
	"authors": [
		{
			"name": "Tomas Grasl",
			"homepage": "http://tomasgrasl.cz/"
		}
	],
	"require": {
		"php": "^8.1",
		"ext-curl": "*",
		"ext-json": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^10.0",
		"phpstan/phpstan": "^1.10",
		"phpstan/phpstan-strict-rules": "^1.5",
		"friendsofphp/php-cs-fixer": "^3.40"
	},
	"autoload": {
		"psr-4": {
			"Freema\\HeurekaAPI\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Freema\\HeurekaAPI\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"phpstan": "phpstan analyse src --level=max",
		"cs-check": "php-cs-fixer fix --dry-run --diff",
		"cs-fix": "php-cs-fixer fix"
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"php-http/discovery": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}